{
  "name": "microservice-runner",
  "version": "1.0.0",
  "description": "Runs all micro service",
  "author": "Harrison <dcharris@ucsc.edu>",
  "license": "UNLICENSED",
  "repository": "none",
  "scripts": {
    "docker-auth": "cd AuthService && docker-compose up -d",
    "docker-ticket": "cd TicketService && docker-compose up -d",
    "docker-vehicle": "cd VehicleService && docker-compose up -d",
    "docker-permit": "cd PermitService && docker-compose up -d",
    "docker-lot": "cd LotService && docker-compose up -d",
    "docker-down-auth": "cd AuthService && docker-compose down -v",
    "docker-down-ticket": "cd TicketService && docker-compose down -v",
    "docker-down-vehicle": "cd VehicleService && docker-compose down -v",
    "docker-down-permit": "cd PermitService && docker-compose down -v",
    "docker-down-lot": "cd LotService && docker-compose down -v",
    "docker-all": "npm run docker-auth && npm run docker-ticket && npm run docker-vehicle && npm run docker-permit",
    "docker-down-all": "npm run docker-down-auth && npm run docker-down-ticket && npm run docker-down-vehicle && npm run docker-down-permit",
    "install-auth": "cd AuthService && npm install",
    "install-email": "cd EmailService && npm install",
    "install-ticket": "cd TicketService && npm install",
    "install-vehicle": "cd VehicleService && npm install",
    "install-permit": "cd PermitService && npm install",
    "install-lot": "cd LotService && npm install",
    "install-stripe": "cd StripeService && npm install",
    "install-webhook": "cd WebhookService && npm install",
    "installs": "npm install && npm run install-auth && npm run install-email && npm run install-ticket && npm run install-vehicle && npm run install-permit && npm run install-lot && npm run install-stripe && npm run install-webhook",
    "dev-auth": "cd AuthService && npm run dev",
    "dev-ticket": "cd TicketService && npm run dev",
    "dev-vehicle": "cd VehicleService && npm run dev",
    "dev-permit": "cd PermitService && npm run dev",
    "dev-lot": "cd LotService && npm run dev",
    "dev-stripe": "cd StripeService && npm run dev",
    "dev": "concurrently \"npm run dev-auth\" \"npm run dev-ticket\" \"npm run dev-vehicle\" \"npm run dev-permit\" \"npm run dev-lot\" \"npm run dev-stripe\"",
    "test-auth": "cd AuthService && npm run test",
    "test-email": "cd EmailService && npm run test",
    "test-lot": "cd LotService && npm run test",
    "test-permit": "cd PermitService && npm run test",
    "test-ticket": "cd TicketService && npm run test",
    "test-vehicle": "cd VehicleService && npm run test",
    "test-stripe": "cd StripeService && npm run test",
    "test": "npm run test-stripe && npm run test-auth && npm run test-ticket && npm run test-permit && npm run test-vehicle && npm run test-lot && npm run test-email",
    "combine-coverage": "ts-node coverage-combiner.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/node": "^22.15.29",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "istanbul-api": "^2.1.7",
    "istanbul-lib-coverage": "^3.2.2"
  }
}
