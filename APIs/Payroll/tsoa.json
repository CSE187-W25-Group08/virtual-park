
{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "api_key": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemes": [
      "http"
    ],
    "basePath": "/api/v0"
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "./src/payroll/payrollAuth.ts"
  }
}
